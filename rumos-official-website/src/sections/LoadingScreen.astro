---
import { ImagesRoute } from "../assets/images/ImagesRoute"
---



<div id="loading-screen" class="loading-screen flex-all-center">
  <div class="loader">
    <div class="spinner"></div>
    <p>Loading...</p>
    <div class="progress-container">
      <div id="progress-bar" class="progress-bar"></div>
    </div>
    <p id="progress-text">0%</p>
  </div>
  <figure class="second-proccess">
    <img src={ImagesRoute.Ellipse}/>
    <div class="second-proccess__concept">
        <p class="concept-text">変わらぬ日々に魔法をかけて。</p>
    </div>
  </figure>
</div>



<style lang="scss">

  .loading-screen {
    position: fixed;
    z-index: 99;
    width: 100vw;
    height: 100dvh;
    background-color: black;
    text-align: center;
  }

  .loader {
    /* 最初は表示 */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .second-proccess {
    /* 最初は非表示（JSで制御） */
    position:relative;
    &__concept{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color:black;
        letter-spacing: 0.5rem;
    }

  }

  .progress-container {
    width: 200px;
    height: 4px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2px;
    overflow: hidden;
    margin: 1rem auto;
  }

  .progress-bar {
    height: 100%;
    background: white;
    transition: width 0.3s ease;
    width: 0%;
  }

  .spinner {
    width: 50px;
    height: 50px;
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }
</style>