---
import { ImagesRoute } from "../../../assets/images/ImagesRoute";
---

<section class="gallery-section">
    <div class="gallery-section__inner">
        <img class="gallery-section__inner-top img--md-horizontal" src = {ImagesRoute.IMG_7366}/>
        <img class="gallery-section__inner-bottom img--lg-horizontal" src = {ImagesRoute.IMG_7369}/>
    </div>
    <img class="section-frame" src = {ImagesRoute.IMG_7362}/>
</section>

<style lang = "scss">
    .gallery-section{
        height:200lvh;
        width:100%;
        background-color: black;
        &__inner{
            width:100%;
            height:50%;
            box-sizing: border-box;
            padding:5rem;

            display:grid;
            grid-template-columns: repeat(2,1fr);
            grid-template-rows:repeat(2,1fr);
            gap:5rem;
            &-top{
                grid-row: 1;
                grid-column: 2;
            }
            &-bottom{
                grid-row: 2;
                grid-column: 1;
            }
        }
        &__figure{
        
        }
    }
</style>