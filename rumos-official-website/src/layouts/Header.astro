---
import { ImagesRoute } from "../assets/images/ImagesRoute"
const menuList= [
    {label:"Home",path:"/"},
    {label:"Product",path:"/product"},
    {label:"Technology",path:"/technology"},
    {label:"DAWN",path:"https://dawn-waiting.com"},
]
---

<header>
    <div class="text-2xl rumos"><a href="/">Rumos</a></div>
    <nav>
        <ul>
            {menuList.map((list)=>(
                <li><a href={list.path}>{list.label}</a></li>
            ))}
        </ul>
    </nav>
    <button id="menu-button">
        <img src = {ImagesRoute.menu}/>
    </button>
</header>

    <div class="section-frame" id = "menu">
        <button id="close-button">
            <img src = {ImagesRoute.x}/>
        </button>
        {menuList.map((list)=>(
            <a class="text-3xl" href={list.path}>{list.label}</a>
        ))}
    </div>

<script>
  const menu = document.getElementById("menu");
  const btn = document.getElementById("menu-button");
  const closeBtn =document.getElementById("close-button");

  closeBtn?.addEventListener("click",()=>{
    if(menu){
        menu.style.display = "none";
    }
  })

  btn?.addEventListener("click", () => {
    if(menu){
        menu.style.display = "flex";
    }
  })
</script>

<style lang="scss">
    @use "../assets/styles/fonts.scss";
    header{
        width:100%;
        display:flex;
        justify-content:space-between;
        align-items:center;

        position:fixed;
        top:0;
        left:0;
        z-index:10;

        box-sizing: border-box;
        padding: 0 0.5rem;

        .rumos{
            letter-spacing: 1rem;
        }
    }

    nav > ul{
        display:flex;
        font-size:fonts.$text-x;
        letter-spacing: 5px;
        * + *{
            margin-left:3rem;
            
        }
    }

    #menu-button{
        display: none;
        > img{
            box-sizing: border-box;
            width:5rem;
            height: 5rem;
            padding:0.5rem;
        }
    }
    #menu {
  position: fixed;
  inset: 0;
  z-index: 99;
  display: none; // JSで display:block に切り替える
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2.5rem;

  /* 背景：ガラスモーフィズム */
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(12px) saturate(160%);
  -webkit-backdrop-filter: blur(12px) saturate(160%);

  animation: menu-fade 0.4s ease-out forwards;

  > a {
    font-size: 2rem;
    color: #fff;
    text-decoration: none;
    position: relative;
    padding-bottom: 0.4rem;
    transition: all 0.3s ease;

    /* 下線（ホバー時にアニメーション） */
    &::after {
      content: "";
      position: absolute;
      left: 50%;
      bottom: 0;
      transform: translateX(-50%) scaleX(0);
      width: 80%;
      height: 2px;
      background: #fff;
      transition: transform 0.3s ease;
      transform-origin: center;
    }

    &:hover {
      color: #d7f2ff;
      text-shadow: 0 0 12px #aef5ff, 0 0 24px #d4fbff;

      &::after {
        transform: translateX(-50%) scaleX(1);
      }
    }
  }
}

/* 閉じるボタン */
#close-button {
  position: absolute;
  top: 2rem;
  right: 2rem;
  padding: 1rem;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 50%;
  transition: 0.3s ease;
  cursor: pointer;
  border: 1px solid rgba(255, 255, 255, 0.2);

  img {
    width: 2rem;
    height: 2rem;
  }

  &:hover {
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 0 15px #fff;
  }
}

/* フェード + スライドイン演出 */
@keyframes menu-fade {
  0% {
    opacity: 0;
    transform: translateY(-2%);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
    @media (max-width: 1024px) {
        nav{
            display: none;
        }
        #menu-button{
          display: block;
        }
    }

</style>