---
const {path,label} = Astro.props;
---
<a class="button-container" href={path}>
    <p>{label}</p>
    <div class="line">
</a>

<style lang="scss">
    .button-container{
        margin:0 1em;
        width:100%;
        min-width:15rem;
        box-sizing:border-box;
        text-align: start;

        
    }
    .line{
        width:100%;
        height:1px;
        background:white;
    }
</style>