---
import {BaseLayout} from "../layouts";
import {Hero,Concept,Device,Technology} from "../sections/index"
import {BoundaryLine} from "../components/elements"
---
<BaseLayout>
  
  <Hero/>
  <Concept/>
  <BoundaryLine/>
  <Device/>
  <BoundaryLine/>
  <Technology/>
</BaseLayout>


<script>
  import { initMultiParallax,initScrollFade } from "../hooks/index";


  initMultiParallax([
    { selector: ".tracked-element", ratio: 0.2 },
    { selector: ".tracked-element2", ratio: 0.4 },
    { selector: ".tracked-element3", ratio: 0.6 },
  ]);

  initScrollFade({
    selector:'.lamplight',
    threshold:0.1,
  })


</script>