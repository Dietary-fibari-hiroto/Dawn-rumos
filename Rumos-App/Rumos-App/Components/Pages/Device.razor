@page "/app/device"
@using Rumos_App.Services
@using Rumos_App.DTOs
@using Rumos_App.Entities
@inject ApiService Api
@inject IJSRuntime JS

<PageTitleLabel Title="Device" SubTitle="デバイス設定" />

<div class="device-page">
    <!-- アクションバー -->
    <section class="action-bar">
        <button class="action-btn register-btn" @onclick="() => isRegisterDialogOpen = true">
            <span class="btn-icon">+</span>
            <span class="btn-label">Register</span>
        </button>
    </section>

    <!-- メインコンテンツ -->
    <section class="content-grid">
        <!-- デバイスリストパネル -->
        <div class="panel device-list-panel">
            <div class="panel-header">
                <h2 class="panel-title">Devices</h2>
                <span class="device-count">@GetDeviceCount()</span>
            </div>

            <div class="panel-content">
                @if (devices == null)
                {
                    <div class="loading-state">
                        <div class="loading-spinner"></div>
                        <p class="loading-text">Loading devices...</p>
                    </div>
                }
                else if (devices.Count == 0)
                {
                    <div class="empty-state">
                        <div class="empty-icon">📱</div>
                        <p class="empty-text">No devices found</p>
                    </div>
                }
                else
                {
                    <div class="device-list">
                        @foreach (var platform in devices)
                        {
                            <div class="platform-section">
                                <h3 class="platform-name">@platform.PlatformName</h3>
                                <div class="device-grid">
                                    @foreach (var device in platform.Devices)
                                    {
                                        <DeviceButton Device="@device"
                                                      OnSelectDevice="SelectDevice"
                                                      IsSelected="@(controlDevice?.Id == device.Id)" />
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- デバイス詳細パネル -->
        <div class="panel detail-panel">
            <div class="panel-header">
                <h2 class="panel-title">Details</h2>
                @if (controlDevice != null)
                {
                    <span class="status-badge online">Active</span>
                }
            </div>

            <div class="panel-content">
                @if (controlDevice == null)
                {
                    <div class="no-device-state">
                        <div class="no-device-icon">🎯</div>
                        <p class="no-device-text">Select a device to view details</p>
                    </div>
                }
                else
                {
                    <div class="detail-container">
                        <!-- デバイス情報カード -->
                        <div class="device-info-card">
                            <h3 class="device-info-name">@controlDevice.Name</h3>
                            <div class="device-info-details">
                                <div class="info-item">
                                    <span class="info-label">ID</span>
                                    <span class="info-value">@controlDevice.Id</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Series</span>
                                    <span class="info-value">@GetPlatformName(controlDevice.Series)</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Power</span>
                                    <span class="info-value status-badge @(controlDevice.Brightness > 0 ? "on" : "off")">
                                        @(controlDevice.Brightness > 0 ? "ON" : "OFF")
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- コントロールセクション -->
                        <div class="control-section">
                            <!-- モード選択 -->
                            <div class="control-group">
                                <label class="control-label">Mode</label>
                                <div class="select-wrapper">
                                    <select class="mode-select" @bind="selectedMode">
                                        <option value="normal">Normal</option>
                                        <option value="fadein">Fade In</option>
                                        <option value="whitegradient">White Gradient</option>
                                    </select>
                                    <div class="select-icon">▼</div>
                                </div>
                            </div>

                            <!-- カラーピッカー -->
                            <div class="control-group">
                                <label class="control-label">Color</label>
                                <div class="color-picker-container">
                                    <input type="color"
                                           class="color-input-hidden"
                                           @bind="selectedColor"
                                           @bind:after="OnColorPicked"
                                           @ref="colorInput" />

                                    <button class="color-picker-button" @onclick="TriggerColorPicker">
                                        <div class="color-preview"
                                             style="background: @selectedColor; box-shadow: 0 0 30px @selectedColor;">
                                        </div>
                                        <div class="color-info">
                                            <span class="color-hex">@selectedColor</span>
                                            <span class="color-rgb">@GetRgbString()</span>
                                        </div>
                                        <span class="picker-icon">🎨</span>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- アクションボタン -->
                        <div class="action-buttons">
                            <button class="action-button danger" @onclick="() => isDeleteDialogOpen = true">
                                <span class="button-icon">🗑️</span>
                                <span class="button-text">Delete Device</span>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

<!-- 登録ダイアログ -->
@if (isRegisterDialogOpen)
{
    <div class="dialog-overlay" @onclick="() => isRegisterDialogOpen = false">
        <div class="dialog-container" @onclick:stopPropagation="true">
            <button class="dialog-close" @onclick="() => isRegisterDialogOpen = false">✕</button>

            <div class="dialog-header">
                <h2 class="dialog-title">Register Device</h2>
                <p class="dialog-subtitle">新しいデバイスを登録</p>
            </div>

            <div class="dialog-content">
                <div class="form-group">
                    <label class="form-label">Device Name</label>
                    <input type="text"
                           class="form-input"
                           placeholder="デバイス名"
                           @bind="newDeviceData.Name"
                           required />
                </div>

                <div class="form-group">
                    <label class="form-label">IP Address</label>
                    <input type="text"
                           class="form-input"
                           placeholder="192.168.1.100"
                           @bind="newDeviceData.Ip_v4"
                           required />
                </div>

                <div class="form-group">
                    <label class="form-label">Platform Series</label>
                    @if (platforms == null)
                    {
                        <p class="form-loading">Loading platforms...</p>
                    }
                    else
                    {
                        <div class="select-wrapper">
                            <select class="form-select"
                                    @bind="newDeviceData.Platform_id"
                                    required>
                                <option value="">-- プラットフォームを選択 --</option>
                                @foreach (var platform in platforms)
                                {
                                    <option value="@platform.Id">@platform.Name</option>
                                }
                            </select>
                            <div class="select-icon">▼</div>
                        </div>
                    }
                </div>

                <div class="form-group">
                    <label class="form-label">Room</label>
                    @if (rooms == null)
                    {
                        <p class="form-loading">Loading rooms...</p>
                    }
                    else
                    {
                        <div class="select-wrapper">
                            <select class="form-select"
                                    @bind="newDeviceData.Room_id"
                                    required>
                                <option value="">-- ルームを選択 --</option>
                                @foreach (var room in rooms)
                                {
                                    <option value="@room.Id">@room.Name</option>
                                }
                            </select>
                            <div class="select-icon">▼</div>
                        </div>
                    }
                </div>
            </div>

            <div class="dialog-actions">
                <button class="dialog-button secondary" @onclick="() => isRegisterDialogOpen = false">
                    Cancel
                </button>
                <button class="dialog-button primary" @onclick="RegisterDevice">
                    Register
                </button>
            </div>
        </div>
    </div>
}

<!-- 削除確認ダイアログ -->
@if (isDeleteDialogOpen)
{
    <div class="dialog-overlay" @onclick="() => isDeleteDialogOpen = false">
        <div class="dialog-container delete" @onclick:stopPropagation="true">
            <button class="dialog-close" @onclick="() => isDeleteDialogOpen = false">✕</button>

            <div class="dialog-header">
                <div class="dialog-icon danger">⚠️</div>
                <h2 class="dialog-title">Delete Device</h2>
                <p class="dialog-subtitle">このデバイスを完全に削除します</p>
            </div>

            <div class="dialog-content">
                <div class="confirmation-info">
                    <div class="confirmation-item">
                        <span class="confirmation-label">Name:</span>
                        <span class="confirmation-value">@controlDevice?.Name</span>
                    </div>
                    <div class="confirmation-item">
                        <span class="confirmation-label">ID:</span>
                        <span class="confirmation-value">@controlDevice?.Id</span>
                    </div>
                    <div class="confirmation-item">
                        <span class="confirmation-label">Series:</span>
                        <span class="confirmation-value">@GetPlatformName(controlDevice?.Series ?? 0)</span>
                    </div>
                </div>
                <p class="warning-text">この操作は取り消せません。よろしいですか？</p>
            </div>

            <div class="dialog-actions">
                <button class="dialog-button secondary" @onclick="() => isDeleteDialogOpen = false">
                    Cancel
                </button>
                <button class="dialog-button danger" @onclick="DeleteDevice">
                    Delete
                </button>
            </div>
        </div>
    </div>
}

