@page "/app/individual"
@using Rumos_App.Services
@using Rumos_App.DTOs
@inject ApiService Api
@inject IJSRuntime JS

<PageTitleLabel Title="Individual" SubTitle="個別コントロール" />

<div class="individual-page">
    <!-- コントロールモード切替 -->
    <section class="mode-toggle-section">
        <div class="mode-toggle">
            <button class="mode-button @(controlMode ? "active" : "")"
                    @onclick="() => SetControlMode(true)">
                <span class="mode-icon">⚡</span>
                <span class="mode-label">Control</span>
            </button>
            <button class="mode-button @(!controlMode ? "active" : "")"
                    @onclick="() => SetControlMode(false)">
                <span class="mode-icon">🔌</span>
                <span class="mode-label">Power</span>
            </button>
            <div class="mode-slider @(controlMode ? "left" : "right")"></div>
        </div>
    </section>

    <!-- メインコンテンツエリア -->
    <section class="content-grid">
        <!-- デバイスリスト -->
        <div class="panel device-list-panel">
            <div class="panel-header">
                <h2 class="panel-title">Devices</h2>
                <span class="device-count">@GetDeviceCount()</span>
            </div>

            <div class="panel-content">
                @if (devices == null)
                {
                    <div class="loading-state">
                        <div class="loading-spinner"></div>
                        <p class="loading-text">Loading devices...</p>
                    </div>
                }
                else if (devices.Count == 0)
                {
                    <div class="empty-state">
                        <div class="empty-icon">📱</div>
                        <p class="empty-text">No devices found</p>
                    </div>
                }
                else
                {
                    <div class="device-list">
                        @foreach (var platform in devices)
                        {
                            <div class="platform-section">
                                <h3 class="platform-name">@platform.PlatformName</h3>
                                <div class="device-grid">
                                    @foreach (var device in platform.Devices)
                                    {
                                        <DeviceButton Device="@device"
                                                      OnSelectDevice="SelectDevice"
                                                      IsSelected="@(controlDevice?.Id == device.Id)" />
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- コントロールパネル -->
        <div class="panel control-panel">
            <div class="panel-header">
                <h2 class="panel-title">Control</h2>
                @if (controlDevice != null)
                {
                    <span class="control-status online">Online</span>
                }
            </div>

            <div class="panel-content">
                @if (controlDevice == null)
                {
                    <div class="no-device-state">
                        <div class="no-device-icon">🎯</div>
                        <p class="no-device-text">Select a device to control</p>
                    </div>
                }
                else
                {
                    <div class="control-container">
                        <!-- デバイス情報 -->
                        <div class="device-info-card">
                            <h3 class="device-info-name">@controlDevice.Name</h3>
                            <div class="device-info-details">
                                <div class="info-item">
                                    <span class="info-label">ID</span>
                                    <span class="info-value">@controlDevice.Id</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Series</span>
                                    <span class="info-value">@GetPlatformName(controlDevice.Series)</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Power</span>
                                    <span class="info-value status-badge @(controlDevice.Brightness > 0 ? "on" : "off")">
                                        @(controlDevice.Brightness > 0 ? "ON" : "OFF")
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- モード選択 -->
                        <div class="control-group">
                            <label class="control-label">Mode</label>
                            <div class="select-wrapper">
                                <select class="mode-select" @bind="selectedMode">
                                    <option value="normal">Normal</option>
                                    <option value="fadein">Fade In</option>
                                    <option value="whitegradient">White Gradient</option>
                                </select>
                                <div class="select-icon">▼</div>
                            </div>
                        </div>

                        <!-- カラーピッカー -->
                        <div class="control-group">
                            <label class="control-label">Color</label>
                            <div class="color-picker-container">
                                <input type="color"
                                       class="color-input-hidden"
                                       @bind="selectedColor"
                                       @bind:after="OnColorPicked"
                                       @ref="colorInput" />

                                <button class="color-picker-button" @onclick="TriggerColorPicker">
                                    <div class="color-preview"
                                         style="background: @selectedColor; box-shadow: 0 0 30px @selectedColor;">
                                    </div>
                                    <div class="color-info">
                                        <span class="color-hex">@selectedColor</span>
                                        <span class="color-rgb">@GetRgbString()</span>
                                    </div>
                                    <span class="picker-icon">🎨</span>
                                </button>
                            </div>
                        </div>

                        <!-- アクションボタン -->
                        <div class="action-buttons">
                            <button class="action-button primary" @onclick="ApplySettings">
                                <span class="button-icon">✓</span>
                                <span class="button-text">Apply</span>
                            </button>
                            <button class="action-button secondary" @onclick="ResetSettings">
                                <span class="button-icon">↻</span>
                                <span class="button-text">Reset</span>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

<BgImg Src="images/photos/IMG_7116.jpg" />

@code {
    private bool controlMode = true;
    private string selectedColor = "#FFA200";
    private string selectedMode = "normal";
    private DeviceDto? controlDevice;
    private List<Entities.Platform>? platforms;
    private List<PlatformWithDevicesDto>? devices;
    private ElementReference colorInput;

    protected override async Task OnInitializedAsync()
    {
        devices = await Api.GetDevicesData();
        platforms = await Api.GetPlatforms();
        StateHasChanged();
    }

    private void SetControlMode(bool isControl)
    {
        controlMode = isControl;
    }

    private void SelectDevice(DeviceDto device)
    {
        controlDevice = device;
        string hex = $"#{device.R:X2}{device.G:X2}{device.B:X2}";
        selectedColor = hex;
        StateHasChanged();
    }

    private async Task TriggerColorPicker()
    {
        await JS.InvokeVoidAsync("eval", $"document.querySelector('input[type=color]').click()");
    }

    private async Task OnColorPicked()
    {
        if (controlDevice != null && selectedColor.StartsWith("#") && selectedColor.Length == 7)
        {
            var r = Convert.ToInt32(selectedColor.Substring(1, 2), 16);
            var g = Convert.ToInt32(selectedColor.Substring(3, 2), 16);
            var b = Convert.ToInt32(selectedColor.Substring(5, 2), 16);

            controlDevice.R = r;
            controlDevice.G = g;
            controlDevice.B = b;
            controlDevice.Brightness = 255;

            await Api.TurnOnTheLightById(controlDevice);
            StateHasChanged();
        }
    }

    private async Task ApplySettings()
    {
        if (controlDevice != null)
        {
            await OnColorPicked();
        }
    }

    private void ResetSettings()
    {
        if (controlDevice != null)
        {
            selectedColor = "#FFFFFF";
            selectedMode = "normal";
            StateHasChanged();
        }
    }

    private string GetPlatformName(int seriesId)
    {
        return platforms?.FirstOrDefault(p => p.Id == seriesId)?.Name ?? "不明";
    }

    private int GetDeviceCount()
    {
        return devices?.Sum(p => p.Devices.Count) ?? 0;
    }

    private string GetRgbString()
    {
        if (selectedColor.StartsWith("#") && selectedColor.Length == 7)
        {
            var r = Convert.ToInt32(selectedColor.Substring(1, 2), 16);
            var g = Convert.ToInt32(selectedColor.Substring(3, 2), 16);
            var b = Convert.ToInt32(selectedColor.Substring(5, 2), 16);
            return $"RGB({r}, {g}, {b})";
        }
        return "RGB(0, 0, 0)";
    }
}
