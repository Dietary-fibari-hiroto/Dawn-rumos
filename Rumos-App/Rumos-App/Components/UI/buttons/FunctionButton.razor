<button class="option-button @(Selected ? "selected" : "")" @onclick="@OnClick">
    <img src="@Img" />
    <p class="string-md">@Label</p>
</button>


@code{
    [Parameter] public string Img { get; set; }
    [Parameter] public string Label { get; set; }
    [Parameter] public EventCallback OnClick {get;set;}
    [Parameter] public bool Selected { get; set; } = false;
}