<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="rumos_client.Components.DeviceLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:rumos_client.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border BorderBrush="Wheat" BorderThickness="1" Width="400" Height="80" Padding="10,0">
        <Grid>
            <!-- アイコン -->
            <Border Width="60" Height="60" BorderBrush="Wheat" BorderThickness="1" CornerRadius="10"
                VerticalAlignment="Center" HorizontalAlignment="Left">
                <Image x:Name="DeviceIcon" Source="/Assets/Images/Device_icon.png" Stretch="UniformToFill"/>
            </Border>

            <!-- テキスト -->
            <TextBlock x:Name="DeviceName" Text="Light_Device"
                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>
    </Border>

</UserControl>
